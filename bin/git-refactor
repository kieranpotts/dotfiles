#!/bin/sh

# ==============================================================================
# Script for committing refactoring work.
#
# See `~/.gitconfig` for usage instructions.
# ==============================================================================

if [ -z "${1}" ]; then
  echo "Require commit message" >&2;
  exit 1;
fi;

git add --all

# If there's an environment variable called `X_GIT_COMMIT_VERIFY` and its value
# is `0`, then we apply the `--no-verify` flag to the `git commit` operation.
VERIFY=${X_GIT_COMMIT_VERIFY:-1}

if [ "$VERIFY" -eq "0" ]; then
  git commit --quiet --no-verify --message "refactor: ${1}";
else
  git commit --quiet --message "refactor: ${1}";
fi
